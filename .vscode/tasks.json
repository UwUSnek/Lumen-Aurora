{
    "tasks": [
        {
            "type": "shell",
            "label": "Build LuxEngine  |  Linux  |  Debug",
            "command": "",
            "args": [
                "/usr/bin/g++",
                //Source files
		            "-xc++", "LuxEngine/LuxEngineBuild.cpp.build",
		            "Test.cpp",
                //Max debug infos, additional gprof informations, no optimizations, no inline, Lux Engine security checks
                    "-g3", "-ggdb3", "-pg", "-rdynamic", "-fverbose-asm", "-DLUX_DEBUG",
                    "-O0", "-fno-elide-constructors", "-fno-inline-small-functions", "-fno-inline",
                //Engine
                    "-std=c++2a", "-mavx", "-pipe", "-pthread",
                    "-I./", "-ILuxEngine",
                    "-Wall",
                //Vulkan
                    "-I/home/Edo/Desktop/LuxEngine/deps/Linux/Vulkan-1.2.162.0/x86_64/include",
                    "-L/home/Edo/Desktop/LuxEngine/deps/Linux/Vulkan-1.2.162.0/x86_64/lib",
                    "-ldl", "-lvulkan",
                //GLFW
                    "-I/home/Edo/Desktop/LuxEngine/deps/Shared/glfw-3.3.2/include",
                    "-I/home/Edo/Desktop/LuxEngine/deps/Shared/glfw-3.3.2/deps",
                    "-L/home/Edo/Desktop/LuxEngine/deps/Shared/glfw-3.3.2/build/debug/src",
                    "-ldl", "-lrt", "-lXrandr", "-lXi", "-lXcursor", "-lXinerama", "-lX11", "-lglfw3",
                //Output
					"-o", "./Build/Linux/LuxEngineDebug"
            ],
            "options": { "cwd": "${workspaceFolder}" },
            "problemMatcher": [ "$gcc" ],
            "group": { "kind": "build", "isDefault": true }
        },
        {
            "type": "shell",
            "label": " > Switch to Windows",
            "command": "python3",
            "args": [
                "./Build/SetPlatform.py",
                "w",
            ],
            "problemMatcher": [ ],
            "group": { "kind": "build", "isDefault": true }
        },
        {
            "type": "shell",
            "label": " > Switch to Release",
            "command": "python3",
            "args": [
                "./Build/SetType.py",
                "r"
            ],
            "problemMatcher": [ ],
            "group": { "kind": "build", "isDefault": true }
        }
    ]
}
