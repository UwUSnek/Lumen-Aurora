{
	"tasks": [
		{
			"type": "shell",
			"label": "Build LuxEngine   | Linux   | Debug  ",
			"command": "/usr/bin/g++",
			"args": [
				//Source files
					"LuxEngine/LuxEngineBuild.cpp",
					"Test.cpp",
				//Max debug infos, Additional gprof informations, no optimizations, Lux Engine security checks
					"-g3", "-ggdb3", "-pg", "-O0",
					"-std=c++2a", "-mavx", "-pipe",
					"-DLUX_DEBUG",
				//CWD include, threads
					"-I./", /*"-static", */"-pthread",
				//Vulkan
					"-Ideps/Linux/Vulkan-1.2.154.0/x86_64/include",
					"-Ldeps/Linux/Vulkan-1.2.154.0/x86_64/lib",
					"-ldl", "-lvulkan",
				//GLFW
					"-Ideps/Shared/glfw-3.3.2/include",
					"-Ideps/Shared/glfw-3.3.2/deps",
					"-Ldeps/Shared/glfw-3.3.2/build/debug/src",
					"-ldl", "-lrt", "-lXrandr", "-lXi", "-lXcursor", "-lXinerama", "-lX11", "-lglfw3",
				//Output
					"-o", "./Build/Linux/LuxEngineDebug"
			],
			"options": { "cwd": "${workspaceFolder}" },
			"problemMatcher": [ "$gcc" ],
			"group": { "kind": "build", "isDefault": true }
		},
		{
			"type": "shell",
			"label": "Build LuxEngine   | Linux   | Release",
			"command": "/usr/bin/g++",
			"args": [
				//Source files
					"LuxEngine/LuxEngineBuild.cpp",
					"Test.cpp",
				//No debug infos, optimizations for fast code
					"-ggdb3", "-Ofast",
					"-std=c++2a", "-mavx", "-pipe",
				//CWD include, threads
					"-I./", "-pthread",
				//Vulkan
					"-Ideps/Linux/Vulkan-1.2.154.0/x86_64/include",
					"-Ldeps/Linux/Vulkan-1.2.154.0/x86_64/lib",
					"-ldl", "-lvulkan",
				//GLFW
					"-Ideps/Shared/glfw-3.3.2/include",
					"-Ideps/Shared/glfw-3.3.2/deps",
					"-Ldeps/Shared/glfw-3.3.2/build/debug/src",
					"-ldl", "-lrt", "-lXrandr", "-lXi", "-lXcursor", "-lXinerama", "-lX11", "-lglfw3",
				//Output
					"-o", "./Build/Linux/LuxEngineRelease"
			],
			"options": { "cwd": "${workspaceFolder}" },
			"problemMatcher": [ "$gcc" ],
			"group": { "kind": "build", "isDefault": true }
		},
		{
			"type": "shell",
			"label": "Build application | Linux   | Debug  ",
			"command": "/usr/bin/g++",
			"args": [
				"testglfw.cpp",
				"-g",                                           //Default debug infos
				"-std=c++2a",
				"-I./",                                         //CWD include
				"-pthread",                                     //Thre
				"-Ideps/Shared/glfw-3.3.2/include",                    //GLFW include
				"-Ideps/Shared/glfw-3.3.2/deps",                       //GLFW include
				"-Ldeps/Shared/glfw-3.3.2/build/debug/src",            //GLFW include
				"-ldl", "-lrt", "-lXrandr", "-lXi", "-lXcursor", "-lXinerama", "-lX11", "-lglfw3",
				"-o", "Test.out"                                //Output
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
