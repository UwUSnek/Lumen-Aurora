
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug compiler",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Build/out",
            "args": [
                "/tmp/Lumina-Aurora_UnitTests/src11",
                "-I", "Tests/Includes/Accuracy",
                "-p", "./Test/out"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb",
            "logging": {
                "engineLogging": false
            },
        },
