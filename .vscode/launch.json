
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug compiler",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Build/out",
            "args": [
                "./Test/main.lum",
                "-p", "./Test/out"
            ],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb",
            "logging": {
                "engineLogging": false
            },
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}