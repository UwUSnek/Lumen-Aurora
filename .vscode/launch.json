            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "text": "handle SIGSTOP nostop noprint pass" },{      //Suspend thread
                    "text": "handle SIGCONT nostop noprint pass"          //Resume thread
                }
            ]
        }
    ]
